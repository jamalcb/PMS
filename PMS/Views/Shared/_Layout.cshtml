<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PMS.styles.css" asp-append-version="true" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
               
                <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm w-100">
                    <div class="container-fluid">
                        <!-- Brand -->
                        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-kanban-fill me-1"></i> PMS
                        </a>

                        <!-- Toggle Button (Mobile) -->
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarContent">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <!-- Navbar Content -->
                        <div class="collapse navbar-collapse" id="navbarContent">
                            <!-- Left Menu -->
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-house-door me-1"></i> Home
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                                        <i class="bi bi-shield-lock me-1"></i> Dashboard
                                    </a>
                                </li>
                            </ul>

                            <!-- Right Menu -->
                            <ul class="navbar-nav ms-auto align-items-center">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item me-2">
                                        <a class="btn btn-outline-light btn-sm"
                                           asp-controller="Account" asp-action="Login">
                                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="btn btn-light btn-sm text-primary fw-semibold"
                                           asp-controller="Account" asp-action="Register">
                                            <i class="bi bi-person-plus me-1"></i> Register
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item me-3 text-white fw-semibold">
                                        <i class="bi bi-person-circle me-1"></i>
                                        @User.Identity.Name
                                    </li>

                                    <li class="nav-item">
                                        <a class="btn btn-danger btn-sm"
                                           asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
